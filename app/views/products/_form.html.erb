<%= simple_form_for(product, remote: defined? remote) do |f| %>
  <fieldset>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.association :category %>
      <%= f.association :brand %>
      <%= f.file_field :photo %>
      <%= f.file_field :photo2 %>
      <div class="form-actions">
        <%= f.button :submit %>
        <%= link_to 'Cancel', products_path, :class => 'btn' %>
      </div>
  </fieldset>
<% end %>
